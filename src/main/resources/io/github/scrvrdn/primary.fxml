<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="640" prefHeight="480" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.scrvrdn.PrimaryController" styleClass="border-pane">
   <top>
      <Button fx:id="primaryButton" text="â˜°" onAction="#switchToSettings">
            <tooltip>
               <Tooltip text="Settings" />
            </tooltip>
         </Button>
   </top>
   <center>
      <VBox alignment="CENTER" styleClass="vbox">
         <children>
            
            
            <Label text="Interval Training" />
            <Label fx:id="statsLabel" />

            <HBox alignment="CENTER">
               <Button fx:id="unison" text="Unison" onAction="#handleAnswerButton" />
               <Button fx:id="minSecond" text="Minor Second" onAction="#handleAnswerButton" />
               <Button fx:id="majSecond" text="Major Second" onAction="#handleAnswerButton" />
               <Button fx:id="minThird" text="Minor Third" onAction="#handleAnswerButton" />               
            </HBox>

            <HBox alignment="CENTER">
               <Button fx:id="majThird" text="Major Third" onAction="#handleAnswerButton"/>
               <Button fx:id="fourth" text="Perfect Fourth" onAction="#handleAnswerButton" />
               <Button fx:id="tritone" text="Tritone" onAction="#handleAnswerButton" />
               <Button fx:id="fifth" text="Perfect Fifth" onAction="#handleAnswerButton" />               
            </HBox>

            <HBox alignment="CENTER">
               <Button fx:id="minSixth" text="Minor Sixth" onAction="#handleAnswerButton" />
               <Button fx:id="majSixth" text="Major Sixth" onAction="#handleAnswerButton" />
               <Button fx:id="minSeventh" text="Minor Seventh" onAction="#handleAnswerButton" />
               <Button fx:id="majSeventh" text="Major Seventh" onAction="#handleAnswerButton" />               
            </HBox>

            <HBox alignment="CENTER">
               <Button fx:id="octave" text="Perfect Octave" onAction="#handleAnswerButton" />
               <Button fx:id="minNinth" text="Minor Ninth" onAction="#handleAnswerButton" />
               <Button fx:id="majNinth" text="Major Ninth" onAction="#handleAnswerButton" />
               <Button fx:id="minTenth" text="Minor Tenth" onAction="#handleAnswerButton" />
               
            </HBox>
               
            <HBox alignment="CENTER">
            <Button fx:id="majTenth" text="Major Tenth" onAction="#handleAnswerButton" />
               <Button fx:id="eleventh" text="Perfect Eleventh" onAction="#handleAnswerButton" />
               <Button fx:id="augEleventh" text="Augmented Eleventh" onAction="#handleAnswerButton" />
               <Button fx:id="twelfth" text="Perfect Twelfth" onAction="#handleAnswerButton" />
            </HBox>
            
            <HBox alignment="CENTER">
               <Button fx:id="playButton" text="Hear Again" onAction="#handlePlayButton" disable="true"/>
               <Button fx:id="nextButton" text="Next" onAction="#handleNextButton" disable="true" />
               <padding>
                  <Insets top="40.0" />
               </padding>
            </HBox>
            
            <Button fx:id="startQuitButton" text="Start" onAction="#handleStartQuitButton"/>    
         </children>
      </VBox>
   </center>
 </BorderPane>